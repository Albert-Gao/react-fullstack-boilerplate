{
    "extends": "airbnb",
    "plugins": [
        "react"
    ],
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": ["error", 4],
        "no-unused-vars": ["error", {"varsIgnorePattern": "style"} ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
